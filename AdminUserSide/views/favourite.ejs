<!DOCTYPE html>
<html>
<head>
  <title>My Favourites - Dribbble</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #ffe6f0;
    }
    nav {
      background-color: #ea4c89;
      padding: 12px 0;
    }
    nav a {
      color: white;
      font-size: 24px;
      font-weight: bold;
      text-decoration: none;
    }
    .btn-pink {
      background-color: #ea4c89;
      color: white;
      border: none;
    }
    .btn-pink:hover {
      background-color: #d93b78;
    }
    .fav-item {
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(234, 76, 137, 0.1);
      padding: 15px;
    }
    .btn-danger {
      background-color: #ff5c8a;
      border: none;
    }
    .btn-danger:hover {
      background-color: #e94f7e;
    }
  </style>
</head>
<body>

  <!-- Header -->
  <nav>
    <div class="container d-flex justify-content-between align-items-center">
      <a href="/user">Dribbble</a>
      <div>
        <a href="/user/cart" class="btn btn-pink me-2">
          <i class="bi bi-cart-fill"></i> Cart
        </a>
        <a href="/user/favourite" class="btn btn-pink">
          <i class="bi bi-heart-fill"></i> Favourites
        </a>
      </div>
    </div>
  </nav>

  <!-- Favourite Content -->
  <div class="container mt-4">
    <h3 class="text-dark">üíñ Your Favourites</h3>
    <hr>

    <% if (favourites.length === 0) { %>
      <div class="alert alert-info">You haven't added any favourites yet.</div>
    <% } else { %>
      <% favourites.forEach(item => { %>
        <div class="d-flex mb-3 fav-item align-items-center">
          <img src="<%= item.image %>" alt="<%= item.title %>" style="width: 120px; height: 120px; object-fit: contain; margin-right: 20px;">
          <div>
            <h5 class="fw-bold text-dark mb-1"><%= item.title %></h5>
            <p class="mb-1 text-muted">Price: ‚Çπ<span class="text-success fw-bold"><%= item.price %></span></p>
            <a href="/user/favourite/remove/<%= item._id %>" class="btn btn-sm btn-danger">Remove</a>
          </div>
        </div>
      <% }) %>
    <% } %>

    <a href="/user" class="btn btn-pink">‚Üê Continue Shopping</a>
  </div>

</body>
</html>
