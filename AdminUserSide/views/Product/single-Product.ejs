<%- include('../header') %>

<style>
  body {
    background-color: #1a1a1a;
    color: #f8f9fa;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
  }

  .container {
    padding: 2rem;
  }

  h3 {
    color: #e74c3c;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .product-card {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #2c2f33;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
    height: 500px;
    width: 85%;
    margin-left: auto;
    margin-right: auto;
    transition: all 0.3s ease-in-out;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(231, 76, 60, 0.5);
  }

  .product-image {
    width: 45%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000;
    padding: 20px;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    max-height: 420px;
    object-fit: cover;
    border-radius: 10px;
  }

  .product-info {
    width: 55%;
    padding: 30px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .product-info h4 {
    font-size: 28px;
    color: #e74c3c;
    margin-bottom: 10px;
  }

  .product-info p {
    font-size: 20px;
    color: #ccc;
    margin-bottom: 20px;
  }

  .badge {
    font-size: 15px;
    padding: 7px 12px;
    margin-right: 10px;
    border-radius: 12px;
    font-weight: 500;
  }

  .badge.bg-info {
    background-color: #3498db;
  }

  .badge.bg-primary {
    background-color: #9b59b6;
  }

  .badge.bg-success {
    background-color: #2ecc71;
  }

  .row {
    margin-bottom: 10px;
    font-size: 18px;
  }

  .btn-sm {
    font-size: 18px;
    padding: 6px 14px;
  }

  .btn-outline-warning {
    color: #f39c12;
    border-color: #f39c12;
  }

  .btn-outline-warning:hover {
    background-color: #f39c12;
    color: white;
  }

  .btn-outline-danger {
    color: #e74c3c;
    border-color: #e74c3c;
  }

  .btn-outline-danger:hover {
    background-color: #e74c3c;
    color: white;
  }

  @media (max-width: 768px) {
    .product-card {
      flex-direction: column;
      height: auto;
      width: 100%;
    }

    .product-image,
    .product-info {
      width: 100%;
    }

    .product-image img {
      max-height: 300px;
    }
  }
</style>

<div class="container">
  <h3 class="text-center mb-5">All Products</h3>

  <% if (products.length > 0) { %>
    <% products.forEach((product) => { %>
      <div class="product-card card-hover">
        <!-- Image Side -->
        <div class="product-image">
          <img src="<%= product.productImage %>" alt="Product Image">
        </div>

        <!-- Details Side -->
        <div class="product-info">
          <div>
            <h4><%= product.productName %></h4>
            <p><%= product.description %></p>

            <div class="row">
              <div class="col-sm-6"><strong>Price:</strong> â‚¹<%= product.price %></div>
              <div class="col-sm-6"><strong>Stock:</strong> <%= product.stock || 'N/A' %></div>
            </div>

            <div class="mb-3 mt-2">
              <span class="badge bg-info">Category: <%= product.categoryId?.category || 'N/A' %></span>
              <span class="badge bg-primary">Sub: <%= product.subCategoryId?.subCategory || 'N/A' %></span>
              <span class="badge bg-success">Extra: <%= product.extraCategoryId?.extraCategory || 'N/A' %></span>
            </div>
          </div>

          <div class="d-flex justify-content-end gap-2 mt-3">
            <a href="/Product/edit-Product/<%= product._id %>" class="btn btn-outline-warning btn-sm rounded-pill">Edit</a>
            <a href="/Product/delete-Product/<%= product._id %>" class="btn btn-outline-danger btn-sm rounded-pill" onclick="return confirm('Are you sure to delete this product?')">Delete</a>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center text-muted p-4 bg-dark rounded shadow-sm">
      No product records found.
    </div>
  <% } %>
</div>

<%- include('../footer') %>
