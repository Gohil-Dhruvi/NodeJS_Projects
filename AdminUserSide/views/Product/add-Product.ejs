<%- include('../header') %>

<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-sm-12 col-xl-10 mx-auto">
      <div class="bg-secondary rounded p-4 shadow">
        <h3 class="text-light mb-4 text-center">
          <i class="bi bi-plus-square-dotted me-2 text-primary"></i>Add New Product
        </h3>

        <form method="POST" action="/Product/add-Product" enctype="multipart/form-data">

          <!-- Product Name -->
          <div class="mb-3">
            <label for="productName" class="form-label text-light">
              <i class="bi bi-tag-fill me-2 text-info"></i>Product Name
            </label>
            <input type="text" class="form-control" id="productName" name="productName" placeholder="Enter product name" required>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label text-light">
              <i class="bi bi-card-text me-2 text-warning"></i>Description
            </label>
            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter product description" required></textarea>
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label for="price" class="form-label text-light">
              <i class="bi bi-currency-rupee me-2 text-success"></i>Price
            </label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Enter product price" required>
          </div>

          <!-- Discount -->
          <div class="mb-3">
            <label for="discount" class="form-label text-light">
              <i class="bi bi-percent me-2 text-info"></i>Discount (%)
            </label>
            <input type="number" class="form-control" id="discount" name="discount" placeholder="Enter discount percentage (optional)">
          </div>

          <!-- Sizes -->
          <div class="mb-3">
            <label for="sizes" class="form-label text-light">
              <i class="bi bi-arrows-angle-expand me-2 text-light"></i>Sizes (comma separated)
            </label>
            <input type="text" class="form-control" id="sizes" name="sizes" placeholder="Enter sizes (e.g., S, M, L)" required>
          </div>

          <!-- Colors -->
          <div class="mb-3">
            <label for="colors" class="form-label text-light">
              <i class="bi bi-palette-fill me-2 text-danger"></i>Colors (comma separated)
            </label>
            <input type="text" class="form-control" id="colors" name="colors" placeholder="Enter colors (e.g., Red, Blue)" required>
          </div>

          <!-- Material -->
          <div class="mb-3">
            <label for="material" class="form-label text-light">
              <i class="bi bi-texture me-2 text-info"></i>Material
            </label>
            <input type="text" class="form-control" id="material" name="material" placeholder="Enter product material (optional)">
          </div>

          <!-- Gender -->
          <div class="mb-3">
            <label for="gender" class="form-label text-light">
              <i class="bi bi-gender-ambiguous me-2 text-warning"></i>Gender
            </label>
            <select class="form-select" id="gender" name="gender" required>
              <option disabled selected>Select Gender</option>
              <option value="Men">Men</option>
              <option value="Women">Women</option>
              <option value="Unisex">Unisex</option>
              <option value="Kids">Kids</option>
            </select>
          </div>

          <!-- Stock -->
          <div class="mb-3">
            <label for="stock" class="form-label text-light">
              <i class="bi bi-box-seam me-2 text-success"></i>Stock Quantity
            </label>
            <input type="number" class="form-control" id="stock" name="stock" placeholder="Enter stock quantity (optional)">
          </div>

          <!-- Rating -->
          <div class="mb-3">
            <label for="rating" class="form-label text-light">
              <i class="bi bi-star-fill me-2 text-warning"></i>Rating (0 to 5)
            </label>
            <input type="number" step="0.1" min="0" max="5" class="form-control" id="rating" name="rating" placeholder="Enter product rating (optional)">
          </div>

          <!-- Brand -->
          <div class="mb-3">
            <label for="brand" class="form-label text-light">
              <i class="bi bi-building me-2 text-info"></i>Brand
            </label>
            <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter product brand (optional)">
          </div>

          <!-- Category -->
          <div class="mb-3">
            <label for="categoryId" class="form-label text-light">
              <i class="bi bi-list-ul me-2 text-primary"></i>Select Category
            </label>
            <select class="form-select" name="categoryId" id="categoryId" required>
              <option disabled selected>Select Category</option>
              <% categories.forEach(category => { %>
                <option value="<%= category._id %>"><%= category.category %></option>
              <% }) %>
            </select>
          </div>

          <!-- SubCategory -->
          <div class="mb-3">
            <label for="subCategoryId" class="form-label text-light">
              <i class="bi bi-diagram-3 me-2 text-warning"></i>Select Sub Category
            </label>
            <select class="form-select" name="subCategoryId" id="subCategoryId" required>
              <option disabled selected>Select Sub Category</option>
              <% subCategories.forEach(sub => { %>
                <option value="<%= sub._id %>"><%= sub.subCategory %></option>
              <% }) %>
            </select>
          </div>

          <!-- ExtraCategory -->
          <div class="mb-3">
            <label for="extraCategoryId" class="form-label text-light">
              <i class="bi bi-tags-fill me-2 text-success"></i>Select Extra Category
            </label>
            <select class="form-select" name="extraCategoryId" id="extraCategoryId" required>
              <option disabled selected>Select Extra Category</option>
              <% extraCategories.forEach(extra => { %>
                <option value="<%= extra._id %>"><%= extra.extraCategory %></option>
              <% }) %>
            </select>
          </div>

          <!-- Image Upload -->
          <div class="mb-3">
            <label for="productImage" class="form-label text-light">
              <i class="bi bi-image-fill me-2 text-danger"></i>Upload Product Image
            </label>
            <input type="file" class="form-control" name="productImage" id="productImage" required>
          </div>

          <!-- Submit -->
          <div class="text-end">
            <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">
              <i class="bi bi-cloud-upload-fill me-2"></i>Add Product
            </button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../footer') %>
