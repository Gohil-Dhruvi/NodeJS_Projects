<%- include('header') %>

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-8 mx-auto">
            <div class="bg-secondary rounded p-4 shadow">

                <h3 class="text-light mb-4 text-center">Upadte Admin</h3>

                <form method="post" action="/admin/update-admin/<%= admin.id %>" enctype="multipart/form-data">
                    
                    <!-- ========== PART 1: Basic Details ========== -->
                    <div class="mb-4 border-bottom pb-3">
                        <h5 class="text-light mb-3">1. Basic Details</h5>

                        <div class="mb-3">
                            <label for="fname" class="form-label text-light">First Name</label>
                            <input type="text" class="form-control shadow-sm rounded-3" id="fname" name="firstname" placeholder="First Name Here" value="<%= admin.firstname %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="lname" class="form-label text-light">Last Name</label>
                            <input type="text" class="form-control shadow-sm rounded-3" id="lname" name="lastname" placeholder="Last Name Here" value="<%= admin.lastname %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label text-light">Email Address</label>
                            <input type="email" class="form-control shadow-sm rounded-3" id="email" name="email" placeholder="Enter your Email" value="<%= admin.email %>" required>
                            <div class="form-text text-light">We'll never share your email with anyone else.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label text-light">Password</label>
                            <input type="password" class="form-control shadow-sm rounded-3" id="password" name="password" placeholder="Password Here" value="<%= admin.password %>" required>
                        </div>
                    </div>

                    <!-- ========== PART 2: Additional Info ========== -->
                     
                    <div class="mb-4">
                        <h5 class="text-light mb-3">2. Additional Info</h5>

                        <!-- Gender -->
                        <div class="mb-3">
                            <label class="form-label text-light">Gender</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" id="Male" name="gender" value="Male" <% if(admin.gender == 'Male') { %> checked  <% } %> >
                                    <label class="form-check-label text-light" for="Male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" id="Female" name="gender" value="Female" <% if(admin.gender == 'Female') { %> checked  <% } %> >
                                    <label class="form-check-label text-light" for="Female">Female</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" id="Other" name="gender" value="Other" <% if(admin.gender == 'Other') { %> checked  <% } %> >
                                    <label class="form-check-label text-light" for="Other">Other</label>
                                </div>
                            </div>
                        </div>

                        <!-- Hobbies -->
                        <div class="mb-3">
                            <label class="form-label text-light">Hobbies</label>
                            <div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="hobby1" name="hobbies[]" value="Music" <% if(admin.hobbies.includes('Music')) { %> checked  <% } %> >
                                    <label class="form-check-label text-light" for="hobby1">Music</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="hobby2" name="hobbies[]" value="Adventure" <% if(admin.hobbies.includes('Adventure')) { %> checked  <% } %> >
                                    <label class="form-check-label text-light" for="hobby2">Adventure</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="hobby3" name="hobbies[]" value="Cooking" <% if(admin.hobbies.includes('Cooking')) { %> checked  <% } %> >
                                    <label class="form-check-label text-light" for="hobby3">Cooking</label>
                                </div>
                            </div>
                        </div>

                        <!-- File Upload -->
                        <div class="mb-3">
                            <label for="validatedCustomFile" class="form-label text-light">Upload New Profile Picture</label>
                            <input type="file" class="form-control shadow-sm rounded-3" name="image" id="validatedCustomFile">
                            <% if(admin.image) { %>
                                <div class="mt-2">
                                    <small class="text-light">Current Image:</small><br>
                                    <img src="<%= admin.image %>" alt="Admin Image" height="80" width="80" class="rounded shadow-sm" style="object-fit: cover;">
                                </div>
                            <% } %>
                        </div>

                        <!-- Terms -->
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="agreement" required>
                            <label class="form-check-label text-light" for="agreement">I agree to the terms and conditions</label>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Update Admin</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->

<%- include('footer') %>


