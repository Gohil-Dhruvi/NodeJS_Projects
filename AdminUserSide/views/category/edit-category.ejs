<%- include('../header') %>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded p-4 shadow">
                <h3 class="text-light mb-4">Edit Category</h3>
                <form action="/category/update-category/<%= category._id %>" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label text-light">Category Name</label>
                        <input type="text" name="category" value="<%= category.category %>" class="form-control bg-dark text-light border-0" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light">Current Image</label><br>
                        <img src="<%= category.categoryImage %>" height="100" width="100" class="rounded shadow">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light">Change Image</label>
                        <input type="file" name="categoryImage" class="form-control bg-dark text-light border-0">
                    </div>
                    <button type="submit" class="btn btn-success">Update</button>
                    <a href="/category/view-category" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
