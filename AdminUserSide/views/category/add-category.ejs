<%- include('../header') %>

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-8 mx-auto">
            <div class="bg-secondary rounded p-4 shadow">

                <!-- Form Title with Icon -->
                <h3 class="text-light mb-4 text-center">
                    
                    <i class="bi bi-ui-checks-grid me-2 text-info"></i>Add New Category
                </h3>

                <form method="post" action="/category/add-category" enctype="multipart/form-data">
                    
                    <!-- ========== PART 1: Basic Details ========== -->
                    <div class="mb-4 border-bottom pb-3">
                        <h5 class="text-light mb-3">
                            <i class="bi bi-info-circle-fill text-info me-2"></i>Category Information
                        </h5>

                        <!-- Category Name -->
                        <div class="mb-3">
                            <label for="category" class="form-label text-light">Category Name</label>
                            <div class="input-group shadow-sm rounded-3">
                                <span class="input-group-text">
                                    <i class="bi bi-type-bold text-primary"></i>
                                </span>
                                <input type="text" class="form-control" id="category" name="category" placeholder="Enter Category Name" required>
                            </div>
                        </div>
                    </div>

                    <!-- File Upload -->
                    <div class="mb-3">
                        <label for="categoryImage" class="form-label text-light">Upload Category Image</label>
                        <div class="input-group shadow-sm rounded-3">
                            <span class="input-group-text">
                                <i class="bi bi-cloud-upload-fill text-success"></i>
                            </span>
                            <input type="file" class="form-control" name="categoryImage" id="categoryImage" required>
                        </div>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow">
                            <i class="bi bi-check2-circle me-2"></i>Add Category
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->

<%- include('../footer') %>
