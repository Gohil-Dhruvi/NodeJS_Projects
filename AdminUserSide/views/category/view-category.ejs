<%- include('../header') %>

<!-- Page Wrapper -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded p-4 shadow">

                <!-- Title -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="text-light m-0">Category Information</h3>
                    <a href="/category/add-category" class="btn btn-primary rounded-pill shadow-sm">+ Add New Category</a>
                </div>

                <!-- Table Start -->
                <div class="table-responsive">
                    <table class="table table-striped table-dark table-bordered align-middle text-center mb-0">
                        <thead class="text-light">
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Category Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories.length > 0) { %>
                                <% categories.map((category, i) => { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= category.category %></td>
                                        <td>
                                            <img src="<%= category.categoryImage %>" height="70" width="70" class="rounded shadow-sm" style="object-fit: cover;">
                                        </td>
                                        <td>
                                            <a href="/category/edit-category/<%= category._id %>" class="btn btn-sm btn-warning rounded-pill">Edit</a>
                                            <a href="/category/delete-category/<%= category._id %>" class="btn btn-sm btn-danger rounded-pill" onclick="return confirm('Are you sure to delete this category?')">Delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center text-muted">No category records found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- Table End -->

            </div>
        </div>
    </div>
</div>
<!-- End Page Wrapper -->

<%- include('../footer') %>