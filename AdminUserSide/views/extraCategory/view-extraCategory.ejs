<%- include('../header') %>

<!-- Page Wrapper -->
<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-12">
      <div class="bg-secondary rounded p-4 shadow">

        <!-- Title -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="text-light m-0">Extra Category Information</h3>
          <a href="/extraCategory/add-extraCategory" class="btn btn-primary rounded-pill shadow-sm">
            + Add New Extra Category
          </a>
        </div>

        <!-- Table Start -->
        <div class="table-responsive">
          <table class="table table-striped table-dark table-bordered align-middle text-center mb-0">
            <thead class="text-light">
              <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Subcategory Name</th>
                <th>Extra Category Name</th>
                <th>Extra Category Image</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (extraCategories.length > 0) { %>
                <% extraCategories.map((extraCate, i) => { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= extraCate.categoryId ? extraCate.categoryId.category : 'No Category' %></td>
                    <td><%= extraCate.subCategoryId ? extraCate.subCategoryId.subCategory : 'No Subcategory' %></td>
                    <td><%= extraCate.extraCategory %></td>
                    <td>
                      <% if (extraCate.extraCategoryImage) { %>
                        <img src="<%= extraCate.extraCategoryImage %>" height="70" width="70" class="rounded shadow-sm" style="object-fit: cover;">
                      <% } else { %>
                        <span class="text-muted">No Image</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/extraCategory/edit-extraCategory/<%= extraCate._id %>" class="btn btn-sm btn-warning rounded-pill">Edit</a>
                      <a href="/extraCategory/delete-extraCategory/<%= extraCate._id %>" class="btn btn-sm btn-danger rounded-pill" onclick="return confirm('Are you sure to delete this extra category?')">Delete</a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-muted">No extra category records found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <!-- Table End -->

      </div>
    </div>
  </div>
</div>
<!-- End Page Wrapper -->

<%- include('../footer') %>
