<%- include('header') %>

<!-- Page Wrapper -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded p-4 shadow">

                <!-- Title -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="text-light m-0">Admin Information</h3>
                    <a href="/admin/add-admin" class="btn btn-primary rounded-pill shadow-sm">+ Add New Admin</a>
                </div>

                <!-- Table Start -->
                <div class="table-responsive">
                    <table class="table table-striped table-dark table-bordered align-middle text-center">
                        <thead class="text-light">
                            <tr>
                                <th>#</th>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Hobbies</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (admins.length > 0) { %>
                                <% admins.forEach((admin, i) => { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= admin.firstname %></td>
                                        <td><%= admin.lastname %></td>
                                        <td><%= admin.email %></td>
                                        <td><%= admin.gender %></td>
                                        <td><%= Array.isArray(admin.hobbies) ? admin.hobbies.join(', ') : admin.hobbies %></td>
                                        <td>
                                            <img src="<%= admin.image %>" alt="Admin Image" height="70" width="70" class="rounded-circle shadow-sm" style="object-fit: cover;">
                                        </td>
                                        <td>
                                            <a href="/admin/edit-admin/<%= admin.id %>" class="btn btn-sm btn-warning rounded-pill">Edit</a>
                                            <a href="/admin/delete-admin/<%= admin.id %>" class="btn btn-sm btn-danger rounded-pill" onclick="return confirm('Are you sure to delete this admin?')">Delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No admin records found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- Table End -->

            </div>
        </div>
    </div>
</div>
<!-- End Page Wrapper -->

<%- include('footer') %>
