<%- include('partials/header') %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <% if (movie.poster) { %>
                <img src="<%= movie.poster %>" class="img-fluid movie-poster" alt="<%= movie.title %>">
            <% } else { %>
                <img src="https://via.placeholder.com/300x450?text=No+Poster" class="img-fluid movie-poster" alt="No Poster">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="movie-details">
                <h1 class="mb-3"><%= movie.title %></h1>
                <div class="d-flex align-items-center mb-3">
                    <span class="rating-badge me-3"><%= movie.rating %>/10</span>
                    <span class="badge bg-primary me-2"><%= movie.genre %></span>
                    <span class="badge bg-secondary me-2"><%= movie.language %></span>
                    <span class="badge bg-info"><%= movie.duration %></span>
                </div>
                <p class="text-muted mb-4">Released: <%= movie.releaseYear %></p>
                <h4 class="mb-3">Overview</h4>
                <p class="mb-4"><%= movie.description %></p>
                <h4 class="mb-3">Director</h4>
                <p class="mb-4"><%= movie.director %></p>
                <h4 class="mb-3">Cast</h4>
                <p class="mb-4"><%= movie.cast %></p>
                <div class="d-flex">
                    <a href="/edit/<%= movie._id %>" class="btn btn-warning me-2">Edit Movie</a>
                    <a href="/delete/<%= movie._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this movie?')">Delete Movie</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>