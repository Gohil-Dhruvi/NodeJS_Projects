<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Sphere</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1E1E1E;
            color: #ffffff;
        }

        .card {
            background: #2A2A2A;
            color: white;
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 10px;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(255, 87, 34, 0.3);
        }

        .btn-primary {
            background: linear-gradient(90deg, #E91E63, #FF5722);
            border: none;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Movie List</h2>
        <div class="row">
            <% allMovies.forEach((movie) => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (movie.poster) { %>
                            <img src="<%= movie.poster %>" class="card-img-top p-3" alt="<%= movie.title %>" style="height: 300px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.title %></h5>
                            <p class="card-text"><strong>Director:</strong> <%= movie.director %></p>
                            <p class="card-text"><strong>Genre:</strong> <%= movie.genre %></p>
                            <p class="card-text"><strong>Year:</strong> <%= movie.releaseYear %></p>
                            <p class="card-text"><strong>Rating:</strong> <%= movie.rating %>/10</p>
                            <p class="card-text"><%= movie.description.substring(0, 100) %>...</p>
                            <div class="d-flex justify-content-between">
                                <a href="/view/<%= movie.id %>" class="btn btn-sm btn-primary">View</a>
                                <a href="/edit/<%= movie.id %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/delete/<%= movie.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
